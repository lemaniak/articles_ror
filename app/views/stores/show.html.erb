<h1>Store details</h1>

<div class="row">
  <div class="panel panel-default col-md-4 col-lg-4" style="float:none; margin: 0 auto">
    <div class="panel-body" style=" text-align: left">


          <div class="form-group">
            <label>Name:</label>
            <label><%=@store.name %></label>
          </div>
          <div class="form-group">
            <label>Address:</label>
            <label><%= @store.address%></label>
          </div>

          <div class="form-group" style="text-align: center">
            <%= link_to 'Edit', edit_store_path(@store),{:class=>"btn btn-success pull-right"} %>
            <%= link_to 'Back', stores_path ,{:class=>"btn btn-default pull-left"} %>
          </div>

    </div>
  </div>

</div>
</br>
