<h1>Editing store</h1>

</br>
<div class="row">

  <%= form_for :store, url: store_path(@store), method: :patch do |f| %>

      <% if @store.errors.any? %>
          <div id="error_explanation" class="col-md-4 col-lg-4 alert alert-danger" style="float:none; margin: 0 auto" >
            <ul>
              <% @store.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="panel panel-default col-md-4 col-lg-4" style="float:none; margin: 0 auto">
        <div class="panel-body" style=" text-align: left">

          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.label :address %><br>
            <%= f.text_area :address, {:class => "form-control"} %>
          </div>

          <div class="form-group" style="text-align: center">
            <%= f.submit 'edit Store', {:class => "btn btn-success pull-right"} %>
            <%= link_to 'Back', stores_path, {:class => "btn btn-default pull-left"} %>
          </div>


        </div>
      </div>
  <% end %>


</div>

